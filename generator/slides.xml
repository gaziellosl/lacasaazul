<!-- Slideshow container -->
<div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
  <div class="slides fade slides_about">
    <div class="numbertext">1 / 3</div>
    <img src="./img/exterior/aerial_view.jpg" style="width:100%">
    <div class="text">Caption Text</div>
  </div>

  <div class="mySlides fade slides_about">
    <div class="numbertext">2 / 3</div>
    <img src="./img/exterior/exterior.jpg" style="width:100%">
    <div class="text">Caption Two</div>
  </div>

  <div class="mySlides fade slides_about">
    <div class="numbertext">3 / 3</div>
    <img src="./img/exterior/piscina_natural.jpg" style="width:100%">
    <div class="text">Caption Three</div>
  </div>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="showSlidesPlus(0, 'about',-1)">&#10094;</a>
  <a class="next" onclick="showSlidesPlus(0, 'about',+1)">&#10095;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
  <span class="dot dot_about" onclick="showSlides(0, 'about', to=0)"></span>
  <span class="dot dot_about" onclick="showSlides(0, 'about', to=1)"></span>
  <span class="dot dot_about" onclick="showSlides(0, 'about', to=2)"></span>
</div>
</div>
<script type="text/javascript">
slideIndex.push(0);
showSlides(0, 'about');
initDivMouseOver('about');
var interval_about = setInterval(showSlidesPlusWithCheck, 5000, 0, 'about', 1);
</script>
